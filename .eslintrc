{
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 2020,
    "project": "./tsconfig.json"
  },
  "env": {
    "jest/globals": true
  },
  "plugins": [
    "jest",
    "import-helpers"
  ],
  "extends": [
    "airbnb-base"
  ],
  "settings": {
    "import/resolver": {
      "typescript": {
        "project": [
          "./services/*/tsconfig.json",
          "./packages/*/tsconfig.json"
        ]
      }
    }
  },
  "rules": {
    "no-console": [
      "error",
      {
        "allow": [
          "warn",
          "info"
        ]
      }
    ],
    "arrow-parens": [
      "warn",
      "as-needed"
    ],
    "import/extensions": [
      "error",
      "ignorePackages",
      {
        "js": "never",
        "ts": "never"
      }
    ],
    "import-helpers/order-imports": [
      "warn",
      {
        "newlinesBetween": "always",
        "groups": [
          "module",
          "/^~/",
          [
            "parent",
            "sibling",
            "index"
          ]
        ],
        "alphabetize": {
          "order": "asc",
          "ignoreCase": true
        }
      }
    ]
  }
}
